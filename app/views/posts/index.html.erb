
<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= button_to 'New Post', new_post_path,:method => "get" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Publisheddate</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= post.genre %></td>
        <td><%= post.price %></td>
        <td><%= post.publishedDate %></td>
        <td><%= button_to  'Show', post, :method => "get" %>
        <%= button_to 'Edit', edit_post_path(post),:method => "get" %>
        <%= button_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


